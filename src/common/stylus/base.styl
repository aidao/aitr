a
	text-decoration none

ul
	margin 0
	padding 0
	list-style none

input, textarea
	-webkit-tap-highlight-color rgba(0,0,0,0)

.app-content
	padding-top 1.306667rem

.with-footnav
	position absolute
	top 0
	left 0
	right 0
	bottom 1.0671113rem
	height initial !important
	overflow auto
	-webkit-overflow-scrolling touch
	&.hide-foot-nav
		bottom 0

ul.nav-list
	margin .2665rem 0 .533rem
	background #fff
	li
		display flex
		height 1.1723rem
		padding 0 0.346667rem 0 0.466667rem
		font-size 0.373333rem
		line-height 1.1723rem
		.nav-label
			flex 1
		.nav-value
			color #999
			display inline-block
			font-size .373rem
			margin-right .10666rem
		.arrow
			color #666
	li + li
		border-top 1px solid #eee
input
	height initial !important
	padding 0.15rem
	line-height .713333rem !important
.search input
	height 80% !important
	padding 0
	line-height 1 !important


